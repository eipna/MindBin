<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/preference_category_general"
        app:iconSpaceReserved="false">

        <ListPreference
            app:key="theme"
            app:title="@string/preference_list_theme"
            app:entries="@array/theme"
            app:entryValues="@array/theme"
            app:iconSpaceReserved="false"/>

        <SwitchPreferenceCompat
            app:key="dynamic_colors"
            app:title="Dynamic Colors"
            app:iconSpaceReserved="false"
            app:widgetLayout="@layout/preference_switch"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/preference_category_about"
        app:iconSpaceReserved="false"
        app:allowDividerAbove="true">

        <Preference
            app:key="version"
            app:title="@string/preference_version"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

</PreferenceScreen>